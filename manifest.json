{
  "manifest_version": 3,
  "name": "Organizador de Conversaciones de Gemini",
  "version": "1.3.2",
  "description": "Permite guardar y organizar tus conversaciones de Gemini en carpetas.",
  "options_page": "options/options.html",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "background": {
    "service_worker": "src/scripts/background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "https://gemini.google.com/*"
      ],
      "js": [
        "dist/main.js"
      ],
      "css": [
        "src/styles/styles.css"
      ]
    }
  ],
  "permissions": [
    "storage",
    "contextMenus"
  ],
  "host_permissions": [
    "https://gemini.google.com/*"
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "src/templates/*.html"
      ],
      "matches": [
        "https://gemini.google.com/*"
      ]
    }
  ]
}